{
  "name": "Zalando Mitarbeiterpreise",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Reduziert Preise auf zalando.de um 40 %",
  "homepage_url": "http://extensionizr.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/options/index.html",
  "permissions": [
    "https://*.zalando.de/*",
    "https://zalando.de/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.zalando.de/*",
        "https://zalando.de/*"
      ],
      "js": [
        "src/inject/inject.js",
        "js/jquery/jquery.min.js"
      ]
    }
  ]
}